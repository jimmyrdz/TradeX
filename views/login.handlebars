<div  id="loginForm" class="container">
    <h2>Please log in by typing your name in every required field!</h2>
        <form class="clearfix mb-4">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" class="form-control" name="username" placeholder="Enter username">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" id="password" name="password" type="password" placeholder="Enter password">
            </div>
            <button type="submit" id="submit" class="btn btn-primary float-right">Log in</button>
        </form>
    <h6><a href="/register">Need to sign up?</a></h6>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/log.js"></script>